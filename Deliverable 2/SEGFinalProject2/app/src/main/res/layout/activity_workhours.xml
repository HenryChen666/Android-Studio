<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workhours">

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="599dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="66dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Switch
            android:id="@+id/monday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Monday" />
        <TextView
            android:id="@+id/mondayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start time: ___ End time: ___"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Switch
            android:id="@+id/tuesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Tuesday" />
        <TextView
            android:id="@+id/tuesdayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start time: ___ End time: ___"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Switch
            android:id="@+id/wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Wednesday" />
        <TextView
            android:id="@+id/wednesdayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start time: ___ End time: ___"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Switch
            android:id="@+id/thursday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Thursday" />
        <TextView
            android:id="@+id/thursdayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start time: ___ End time: ___"
            android:textSize="18sp" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Switch
            android:id="@+id/friday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Friday" />
        <TextView
            android:id="@+id/fridayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start time: ___ End time: ___"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Switch
            android:id="@+id/saturday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Saturday" />
        <TextView
            android:id="@+id/saturdayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start time: ___ End time: ___"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Switch
            android:id="@+id/sunday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Sunday" />
        <TextView
            android:id="@+id/sundayText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Start time: ___ End time: ___"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="23dp" />

        <Button
            android:id="@+id/sethours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Hours" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>